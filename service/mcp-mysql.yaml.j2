apiVersion: v1
kind: Pod
metadata:
  name: mariadb
  labels:
    app: mariadb
spec:
  containers:
    - name: mariadb
      image: {{ namespace }}/mariadb:{{ tag }}
      env:
        - name: DB_ROOT_PASSWORD
          value: password
      imagePullPolicy: Always
      ports:
        - containerPort: 3306
          hostPort: 3306
